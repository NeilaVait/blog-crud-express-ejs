<h1>Create blog</h1>

<form id="create-post-form" action="/api/blog" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input required type="text" class="form-control" id="title" name="title" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input required type="text" class="form-control" id="author" name="author" placeholder="Enter author">
    </div>
    <div class="form-group">
        <label for="text">Text</label>
        <textarea required class="form-control" id="text" name="body" placeholder="Enter text" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add post</button>
</form>



