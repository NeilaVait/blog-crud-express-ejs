<% } %>

<% if (locals.feedback && feedback.msg === 'deleted') { %>
<%- include("_alert", {className: "danger", action: "deleted"}) %>
<% } %>

<% if (locals.feedback && feedback.msg === 'updated') { %>
<%- include("_alert", {className: "info", action: "updated"}) %>
<% } %>