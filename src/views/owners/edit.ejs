<%- include("../partials/head.ejs") %>
<%- include("../partials/nav.ejs") %>

<main role="main">

  <h1 class="mb-3">Edit owner</h1>

  <form id="create-post-form" action="/owners/edit/<%= owner._id %> " method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input required type="text" class="form-control" name="name" value="<%= owner.name %>">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input required type="text" class="form-control" name="email" value="<%= owner.email %> ">
    </div>


    <button type="submit" class="btn btn-primary">Save owner</button>
  </form>

</main>

