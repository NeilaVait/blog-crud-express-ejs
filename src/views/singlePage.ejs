<%- include("./partials/head.ejs") %>
    <!-- ikeliam bendra navigacijos faila -->
    <%- include("./partials/nav.ejs") %>

        <section class="jumbotron text-center" data-post-id="<%= post._id %>">
            <div class="container">
                <h1>
                    <%= post.title %>
                </h1>
                <h4>
                    <%= post.author %>
                </h4>
                <p class="lead text-muted">
                    <%= post.body %>
                </p>
                <p class="lead text-muted">
                    <%= post.updatedAt.toLocaleString() %>
                </p>
                <p>
                    <a href="/single/edit/<%= post._id %>" id="edit" class="btn btn-primary my-2">Edit</a>
                    <button data-post-id="<%= post._id %>" id="delete" class="btn btn-danger my-2">Delete</button>
                </p>
            </div>
        </section>

        <%- include("./partials/footer.ejs") %>